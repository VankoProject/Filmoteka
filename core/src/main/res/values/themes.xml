<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Filmoteka" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Filmoteka" parent="Base.Theme.Filmoteka" />

    <style name="ToolbarTitleSize" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoadingProgressBarStyle" parent="Widget.AppCompat.ProgressBar" >
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/common_progress_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressMaterialTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:text">@string/loading_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RetryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:text">@string/retry_button</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ErrorTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/xx_medium_text</item>
        <item name="android:text">@string/no_internet_connection</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/x_medium_margin</item>
    </style>

</resources>