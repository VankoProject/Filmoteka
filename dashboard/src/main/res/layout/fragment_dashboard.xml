<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kliachenko.dashboard.presentation.DashboardFragment">

    <com.kliachenko.dashboard.presentation.CustomTabLayout
        android:id="@+id/dashboardTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/yellow"
        app:tabGravity="center"
        app:tabPaddingStart="@dimen/medium_padding"
        app:tabIndicatorColor="@color/royalBlue"
        android:layout_marginTop="@dimen/medium_margin">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popular_tab"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_rated_tab"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_tab"/>

    </com.kliachenko.dashboard.presentation.CustomTabLayout>

    <com.kliachenko.dashboard.presentation.CustomRecyclerView
        android:id="@+id/dashboardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/film_item_layout"
        tools:itemCount="10"/>

</LinearLayout>